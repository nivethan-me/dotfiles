# Hyper key as cmd + ctrl + alt


# -- Changing Window Focus --

# change window focus within space
cmd + ctrl + alt - j : yabai -m window --focus south
cmd + ctrl + alt - k : yabai -m window --focus north
cmd + ctrl + alt - h : yabai -m window --focus west
cmd + ctrl + alt - l : yabai -m window --focus east

#cmd + ctrl + alt + shift - m : open -a Mail


#change focus between external displays (left and right)
#alt - s: yabai -m display --focus west
#alt - g: yabai -m display --focus east

# -- Modifying the Layout --

# rotate layout clockwise
cmd + ctrl + alt - r : yabai -m space --rotate 270

# flip along y-axis
cmd + ctrl + alt + shift - y : yabai -m space --mirror y-axis

# flip along x-axis
cmd + ctrl + alt + shift - x : yabai -m space --mirror x-axis

# toggle window float
cmd + ctrl + alt + shift - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# -- Modifying Window Size --

# maximize a window
#shift + alt - m : yabai -m window --toggle zoom-fullscreen
cmd + ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
cmd + ctrl + alt - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
#cmd + ctrl + alt + space - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
#cmd + ctrl + alt + space - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;


# move window to prev and next space
cmd + ctrl + alt - p : yabai -m window --space prev;
cmd + ctrl + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

# -- Starting/Stopping/Restarting Yabai --

# stop/start/restart yabai
ctrl + alt - q : brew services stop yabai
ctrl + alt - s : brew services start yabai
ctrl + alt - r : brew services restart yabai

# focus spaces
cmd + ctrl + alt - 0x32 : yabai -m space --focus recent
cmd + ctrl + alt - 1 : yabai -m space --focus 1
cmd + ctrl + alt - 2 : yabai -m space --focus 2
cmd + ctrl + alt - 3 : yabai -m space --focus 3
cmd + ctrl + alt - 4 : yabai -m space --focus 4
cmd + ctrl + alt - 5 : yabai -m space --focus 5

# add arrow keys
cmd + ctrl + alt - h : skhd -k "left"
cmd + ctrl + alt - l : skhd -k "right"
cmd + ctrl + alt - j : skhd -k "down"
cmd + ctrl + alt - k : skhd -k "up"

